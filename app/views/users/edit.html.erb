<%= render 'shared/content_title', title: "Edit your profile" %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :time_zone %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  </br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
