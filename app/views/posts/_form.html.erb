<%= render partial: "shared/error", object: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <div class="well">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: "span11" %>
  </div>
  <br/>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
